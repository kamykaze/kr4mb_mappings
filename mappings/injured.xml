<?xml version="1.0"?>
<root>
    <item>
        <name>Use Injured Keyboard</name>
        <item>
            <name>"Injured" Mode</name>
            <appendix>The "Injured" is a mode that allows you to type far reaching keys easily without reaching</appendix>
            <appendix>for them.</appendix>
            <appendix></appendix>
            <appendix>Y U &#8594; Backspace FwDelete </appendix>
            <appendix>H  &#8594; Return </appendix>
            <identifier vk_config="true">notsave.injured_mode</identifier>
            <autogen>--ShowStatusMessage-- Injured Mode</autogen>

            <autogen>--KeyToKey-- KeyCode::Y,         KeyCode::DELETE</autogen>
            <autogen>--KeyToKey-- KeyCode::U,         KeyCode::DELETE, ModifierFlag::FN</autogen>
            <autogen>--KeyToKey-- KeyCode::H,         KeyCode::RETURN</autogen>
        </item>
        <item>
            <name>Hold key(s) to use Virtual Numpad</name>
        </item>
            <item>
                <name>Hold Z to use "Injured Mode"</name>
                <identifier>private.z_to_injured_mode</identifier>
                <autogen>
                    __KeyOverlaidModifier__
                    KeyCode::Z, 
                    KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_injured_mode,
                    KeyCode::Z,
                    KeyCode::VK_NONE
                </autogen>
            </item>
            <item>
                <name>Hold X to use "Injured Mode"</name>
                <identifier>private.x_to_injured_mode</identifier>
                <autogen>
                    __KeyOverlaidModifier__
                    KeyCode::X, 
                    KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_injured_mode,
                    KeyCode::X,
                    KeyCode::VK_NONE
                </autogen>
            </item>
    </item>
</root>

